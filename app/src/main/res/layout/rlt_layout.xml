<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/anh1"
        android:layout_width="187dp"
        android:layout_height="156dp"
        android:text="1"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#C4C4C4"
        />
    <TextView
        android:id="@+id/anh2"
        android:layout_width="187dp"
        android:layout_height="156dp"
        android:text="2"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#813434"
        android:layout_toRightOf="@+id/anh1"
        />

    <TextView
        android:id="@+id/anh3"
        android:layout_width="96dp"
        android:layout_height="165dp"
        android:layout_below="@+id/anh1"
        android:layout_marginLeft="128dp"
        android:background="#260D0D"
        android:gravity="center"
        android:text="3"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/anh4"
        android:layout_width="130dp"
        android:layout_height="165dp"
        android:text="4"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#9DC8C0"

        android:layout_below="@+id/anh3"
        />

    <TextView
        android:id="@+id/anh5"
        android:layout_width="247dp"
        android:layout_height="83dp"
        android:layout_below="@+id/anh3"
        android:layout_toRightOf="@+id/anh4"
        android:background="#531F1F"
        android:gravity="center"
        android:text="5"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/anh6"
        android:layout_width="245dp"
        android:layout_height="241dp"
        android:layout_below="@+id/anh4"
        android:layout_marginLeft="130dp"
        android:background="#C4C4C4"
        android:gravity="center"
        android:text="6"
        android:textSize="20dp" />


</RelativeLayout>